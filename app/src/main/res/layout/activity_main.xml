<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/bg2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/logopng1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="6"

        android:orientation="vertical">


        <TextView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_grey"
            />

        <TextView
            android:id="@+id/create"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#E6501D"
            android:background="@drawable/rounded_orange"
            android:gravity="center"
            android:text="Create A Bill"
            android:fontFamily="@font/comic_story"
            android:layout_marginTop="-120dp"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <TextView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_grey"
            />

        <TextView
            android:id="@+id/view_rec"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_orange"
            android:text="View Customer List"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/comic_story"
            android:layout_marginTop="-120dp"
            android:layout_marginBottom="15dp"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_grey"
            />
        <TextView
            android:id="@+id/unpaid_rec"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_orange"
            android:text="Unpaid Bills"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comic_story"
            android:layout_marginTop="-120dp"
            android:textSize="25dp"
          />

        <TextView
            android:id="@+id/settings"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
           android:background="@drawable/rounded_orange"
            android:gravity="center"
            android:text="Settings"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comic_story"
            android:textColor="@color/white"
            android:textSize="25dp"
            />
    </LinearLayout>


</LinearLayout>